
@page "/addmember"
@page "/addmember/{MemberId}"
@inherits AddMemberBase

<h3>Add new member</h3>

<section class="member-edit">
    @if (!Saved)
    {
        <div class="alert @StatusClass">@Message</div>

        <EditForm Model="@Member" OnValidSubmit="@HandleValidSubmit">

            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="form-group row">
                <label for="lastName" class="col-sm-3">Last name: </label>
                <InputText id="lastName" @bind-Value="@Member.LastName" class="form-control col-sm-8" placeholder="Enter last name"></InputText>
                <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Member.LastName)" />
            </div>

            <div class="form-group row">
                <label for="firstName" class="col-sm-3">First name: </label>
                <InputText id="firstName" class="form-control col-sm-8" @bind-Value="@Member.FirstName" placeholder="Enter first name"></InputText>
                <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Member.FirstName)" />
            </div>
            <div class="form-group row">
                <label for="email" class="col-sm-3">Email: </label>
                <InputText id="email" class="form-control col-sm-8" @bind-Value="@Member.Email" placeholder="Enter email"></InputText>
                <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Member.Email)" />
            </div>

            <div class="form-group row">
                <label for="street" class="col-sm-3">Street: </label>
                <InputText id="street" class="form-control col-sm-8" @bind-Value="@Member.AddrLine" placeholder="Enter street"></InputText>

            </div>

            <div class="form-group row">
                <label for="zip" class="col-sm-3">Zip code: </label>
                <InputText id="zip" class="form-control col-sm-8" @bind-Value="@Member.Zip" placeholder="Enter zip code"></InputText>

            </div>

            <div class="form-group row">
                <label for="city" class="col-sm-3">City: </label>
                <InputText id="city" class="form-control col-sm-8" @bind-Value="@Member.City" placeholder="Enter city"></InputText>
            </div>
            <div class="form-group row">
                <label for="phonenumber" class="col-sm-3">Phone number: </label>
                <InputText id="phonenumber" class="form-control col-sm-8" @bind-Value="@Member.CellNumber" placeholder="Enter phone number"></InputText>
            </div>
            <button type="submit" class="btn btn-primary edit-btn">
                Save member
            </button>

        </EditForm>
    }
    else
    {
        <div class="alert @StatusClass">@Message</div>
    }
</section>
